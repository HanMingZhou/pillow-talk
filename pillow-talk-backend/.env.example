# 应用配置
APP_NAME="Pillow Talk Backend"
APP_VERSION="0.1.0"
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=4

# 安全配置
ENCRYPTION_KEY=your-secret-encryption-key-here-change-in-production
ALLOWED_ORIGINS=*

# 限流配置
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_API_KEY=100

# 对话配置
CONVERSATION_TTL=1800
MAX_CONVERSATION_HISTORY=10

# 图像处理配置
MAX_IMAGE_SIZE_MB=1.0
IMAGE_QUALITY=85

# 模型配置
MODEL_TIMEOUT=30
MODEL_MAX_RETRIES=3

# TTS 配置
TTS_TIMEOUT=10
TTS_CONFIG_PATH=./tts_config.yaml

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# OpenAI 配置（可选）
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini 配置（可选）
GOOGLE_API_KEY=your-google-api-key-here

# Anthropic Claude 配置（可选）
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# 豆包配置（可选）
DOUBAO_API_KEY=your-doubao-api-key-here

# 智谱 GLM 配置（可选）
GLM_API_KEY=your-glm-api-key-here

# Gemini 配置（可选）
GEMINI_API_KEY=your-gemini-api-key-here

# 千问配置（可选）
# 注意：千问使用 DASHSCOPE_API_KEY，暂时复用 GOOGLE_API_KEY 字段
# 或者添加专门的 QWEN_API_KEY=your-qwen-api-key-here
